                    </ul>
                </div>
            </div>
            <% if(companies[0]['appliedCompanies'].length == 0){ %>
                <br><h4>No applications found</h4><br>
            <% } 
            else{ %>
                <br><h4><b>APPLIED TO: </b></h4><br>
                <div class="list-group">
                    <% for(var i=0;i<companies[0]['appliedCompanies'].length; i++){ %>
                        <button class="list-group-item list-group-item-action"><%= companies[0]['appliedCompanies'][i] %></button>
                    <% } %>
                </div>
            <% } %>
            
            %>

        </div>

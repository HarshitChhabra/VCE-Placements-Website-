<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="http://localhost:2564/assets/css/navbarStyle.css">
        <title>Add Drive</title>
        <style>
            .borderStyle{
                border: 1px solid #000000;
                border-radius: 5px;
                padding:5px 20px;
            }
            body {
                background-image: url(/assets/images/addDriveBack.jpg);
                background-size: cover;
                font-family: 'Roboto Condensed', sans-serif;
                font-weight: bold;
                height: 100vh;
            }
            h1{
                font-family: Montserrat-Medium;
                color: white;
                font-size: 70px;
                font-weight: bold;                   
            }
        </style>
    </head>
    <body>
        <div class="container"><br>
            <h1>ADD DRIVE</h1><br>
            <div class="navigation-wrapper" style="z-index: 1;">
                <div class="navigation-button">
                    <i class="fa fa-bars" style="background-color:black;"></i>
                </div>
                <div class="navigation-menu">
                    <ul>
                        <li><a href="/faculty">HOME</a></li>
                        <li><a href="/faculty/drives">DRIVES</a></li>
                        <li><a href="/faculty/applications">VIEW APPLICATIONS</a></li>
                        <li><a href="/logout">LOGOUT</a></li>
                    </ul>
                </div>
            </div>
            <div class="alert alert-danger" id="errorMessage"></div>
            <div class="card" style=" padding-left:20px !important; padding-top:20px !important;">
                <div class="card-body" >

                
            <form method="POST" action="/faculty/add-drive" onsubmit="return validate()">

                <div class="form-group row">
                    <label for="name">Company: </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="name" name="name" placeholder="Name of the company" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="gpa">Mininum CGPA: </label>
                    <div class="col-sm-6">
                        <input type="number" class="form-control" id="gpa" name="gpa" step=".01" min="1" max="10" placeholder="Example. 6.65" required>
                    </div>
                </div>
                <div class="form-group">
                    <label>Eligible Branches</label>
                    <div class="row">
                        <div class="col form-check">
                            <label class="borderStyle form-check-label" for="cseCheck"><input class="branchCheckbox" type="checkbox" id="cseCheck" name="cseCheck" value="cse" aria-label="Checkbox for following text input"> CSE</label>
                        </div>
                        <div class="col form-check">
                            <label class="borderStyle form-check-label" for="itCheck"><input class="branchCheckbox" type="checkbox" id="itCheck" name="itCheck" value="it" aria-label="Checkbox for following text input"> IT</label>
                        </div>
                        <div class="col form-check">
                            <label class="borderStyle form-check-label" for="eceCheck"><input class="branchCheckbox" type="checkbox" id="eceCheck" name="eceCheck" value="ece" aria-label="Checkbox for following text input"> ECE</label>
                        </div>    
                    </div><br>
                    <div class="row">
                        <div class="col form-check">
                            <label class="borderStyle form-check-label" for="civilCheck"><input class="branchCheckbox" type="checkbox" id="civilCheck" name="civilCheck"  value="civil" aria-label="Checkbox for following text input"> Civil</label>
                        </div>
                        <div class="col form-check">
                            <label class="borderStyle form-check-label" for="mechCheck"><input class="branchCheckbox" type="checkbox" id="mechCheck" name="mechCheck" value="mech" aria-label="Checkbox for following text input"> Mechanical</label>
                        </div>
                        <div class="col form-check">
                            <label class="borderStyle form-check-label" for="eeeCheck"><input class="branchCheckbox" type="checkbox" id="eeeCheck" name="eeeCheck" value="eee" aria-label="Checkbox for following text input"> EEE</label>
                        </div>    
                    </div>
                </div>

                <div class="form-group row">
                    <label for="package">Package: </label>
                    <div class="col-sm-6">
                        <input type="number" class="form-control" id="package" name="package" step="1" min="1" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="fromdate">Drive start date:</label>
                            <input type="date" id="fromdate" name="fromdate" required>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="enddate">Drive End date:</label>
                            <input type="date" id="enddate" name="enddate" required>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="qualifications">Required Qualifications</label>
                    <textarea class="form-control" name="qualifications" id="qualifications" rows="4" required></textarea>
                </div>
                <div class="form-group">
                    <label for="jobdesc">Job description</label>
                    <textarea class="form-control" name="jobdesc" id="jobdesc" rows="4" required></textarea>
                </div>
                <button class="btn btn-primary" type="submit">Add</button>
            </form>
        </div>
    </div>
        </div><br><br>
        <script src="http://localhost:2564/assets/js/navbarJs.js"></script>
        <script>
            $("#errorMessage").hide();
            function validate(){
                var errors='';
                console.log('triggered');
                var errorFlag=0;
                if(new Date($("#fromdate").val()).getTime() > new Date($("#enddate").val()).getTime()){
                    errors+='<p> End date cannot be before From Date</p>';
                    errorFlag=1;
                }
                var branches = $(".branchCheckbox");
                var checked=0;
                for(var i=0;i<branches.length;i++)
                    if(branches[i].checked)
                        checked+=1;
                if(checked==0){
                    errors+='<p> No branches selected</p>';
                    errorFlag=1;
                }

                if($("#qualifications").val().trim()==''){
                    errors+='<p> Qualifications cannot be empty </p>';
                    errorFlag=1;
                }

                if($("#jobdesc").val().trim()==''){
                    errors+='<p> Job description cannot be empty</p>';
                    errorFlag=1;
                }

                if($("#name").val().trim()==''){
                    errors+='<p> Company name cannot be empty</p>';
                    errorFlag=1;
                }

                if(errorFlag==1){
                    $("#errorMessage").html(errors);
                    $("#errorMessage").show();
                    window.scrollTo(0,0);
                    return false;
                }
                $("#errorMessage").hide();
                return true;
            }
        </script>
    </body>
</html>
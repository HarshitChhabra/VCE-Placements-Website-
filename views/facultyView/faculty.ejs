        <title>Drives</title>
        <style>
            .close {
                top: 20;
                right: 20;
                z-index: 1;
                position: absolute;
                display:inline-block;
                padding:5px;
            }
            .close:hover {
                background:#ccc;
            }
            .number {
                background: #1abc9c;
                color: #fff;
                height: 30px;
                width: 30px;
                display: inline-block;
                font-size: 0.8em;
                margin-right: 4px;
                line-height: 30px;
                text-align: center;
                text-shadow: 0 1px 0 rgba(255,255,255,0.2);
                border-radius: 15px 15px 15px 0px;
            }
            body {
                background-image: url(../assets/images/back-2.jpg);
                background-size: cover;
                font-family: 'Roboto Condensed', sans-serif;
                font-weight: bold;
                height: 100vh;
            }
            h2{
                font: 400 60px/1.3 'Berkshire Swash', Helvetica, sans-serif;
                /* color: #2b2b2b; */
                color: #F8F8F8;
                text-shadow: 1px 1px 0px #ededed, 4px 4px 0px rgba(0,0,0,0.15);
            }
            .fontStyle{
                font: 400 30px/1.3 'Oleo Script', Helvetica, sans-serif;
                color: #2b2b2b;
                text-shadow: 4px 4px 0px rgba(0,0,0,0.1);
            }
        </style>

    </head>
    <body>
        <div class="container">
        
        <br><h2>Companies</h2><br>

        <div class="navigation-wrapper" style="z-index: 10;">
            <div class="navigation-button">
                <i class="fa fa-bars" style="background-color:black;"></i>
            </div>
            <div class="navigation-menu">
                <ul>
                    <li><a href="/faculty">HOME</a></li>
                    <li><a href="/faculty/drives">DRIVES</a></li>
                    <li><a href="/faculty/applications">VIEW APPLICATIONS</a></li>
                    <li><a href="/logout">LOGOUT</a></li>
                </ul>
            </div>
        </div>
        <div class="accordion" id="accordionExample">

            <% if(companies.length==0) { %>
                <h2>No placement drives added</h2>

            <% } %>
            <% for(var i=0;i<companies.length;i++) { %>
            <div class="card">
                <div class="card-header" id="headingTwo" style="padding:0;">
                    <h5 class="mb-0">
                        <button style="background:none;border:none; padding:30px;" class="fontStyle list-group-item list-group-item-action" type="button" data-toggle="collapse" data-target="#<%= companies[i].name.replace(' ','') %>" aria-expanded="false" aria-controls="collapseTwo">
                            <span class="number"> <%= (i+1) %></span> &nbsp; &nbsp; <%= companies[i].name %>
                        </button><span class="close" onclick="window.location.href='delete-drive/delete/<%= companies[i].name %>'">x</span>
                    </h5>
                </div>
                <div style="border-color:#c0c0c0; border-radius: 3px; border: 1px solid;" id="<%= companies[i].name.replace(' ','') %>" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                    <div class="card-body">
                        <p><b>Minimum GPA:</b> <%= companies[i].gpa %></p>
                        <p><b>Eligible branches:</b> <%= companies[i].branches.join(' ') %> </p>
                        <p><b>Package:</b> <%= companies[i].package + 'LPA' %> </p>
                        <p><b>Drive date:</b> <%=  'From: '+companies[i].fromDate.getDate() + '-' + (companies[i].fromDate.getMonth()+1) +'-' + companies[i].fromDate.getFullYear()+'  To: '+companies[i].endDate.getDate() + '-' + (companies[i].endDate.getMonth()+1) +'-' + companies[i].endDate.getFullYear() %></p>
                        <p><b>Required Qualifications:</b> <pre><%= companies[i].qualifications %> </pre></p>
                        <p><b>Job description:</b> <pre> <%= companies[i].jobDescription %> </pre> </p>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
        <br><button class="btn btn-warning" onclick="window.location.href='/faculty/add-drive'">Add Drive</button><br>
        <br><button class="btn btn-warning" onclick="window.location.href='notify'">Notify students</button>
    </div>
